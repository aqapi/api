<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pl.kozubek.measuringstation.app.data.mapper.MeasuringDataMapper">
    <resultMap id="MeasuringDataMap" type="Data">
        <id column="id" property="id"/>
        <result column="pollution_key" property="key"/>
    </resultMap>

    <resultMap id="MeasuringDataWithValuesMap" type="DataDto">
        <id column="dataId" property="id"/>
        <result column="pollution_key" property="key"/>
        <collection property="values" column="dataId" javaType="ArrayList" ofType="ValueDto">
            <id column="valueId" property="id"/>
            <result column="date_of_reading" property="date"/>
            <result column="pollution_value" property="value"/>
        </collection>
    </resultMap>

    <select id="getData" resultMap="MeasuringDataMap">
        SELECT id,
               pollution_key
        FROM MEASURING_DATA
    </select>

    <select id="getDataWithValue" resultMap="MeasuringDataWithValuesMap">
        SELECT data.id    as dataId,
               data.pollution_key,
               `value`.id as valueId,
               `value`.date_of_reading,
               `value`.pollution_value
        FROM MEASURING_DATA data
                 INNER JOIN MEASURING_DATA_VALUES `value`
                            ON data.id = `value`.id
        ORDER BY `value`.date_of_reading DESC
    </select>
</mapper>